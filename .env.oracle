# SolarPunk Oracle Service Configuration
# Copy this to .env and customize for your deployment

# Oracle API Settings
LOG_LEVEL=INFO
CACHE_TTL=300  # Cache prices for 5 minutes

# Data Sources
NASA_API_KEY=public  # NASA POWER API key (public key works for testing)
ENERGY_TYPE=solar    # solar, wind, or hydro

# Pricing Parameters
RISK_FREE_RATE=0.05     # 5% annual risk-free rate
BINOMIAL_STEPS=100      # Number of steps in binomial tree
MC_SIMULATIONS=10000    # Monte Carlo simulation count

# Data Refresh
REFRESH_INTERVAL=3600   # Refresh NASA data every hour (seconds)

# Monitoring & Health
HEALTH_CHECK_INTERVAL=30  # Health check every 30 seconds
ERROR_THRESHOLD=5         # Alert if error count exceeds threshold

# Advanced (Optional)
MONGODB_URI=mongodb://localhost:27017/solarpunk  # For price history
REDIS_URL=redis://localhost:6379                # For distributed caching
SLACK_WEBHOOK=                                  # For alerts

# Development/Testing Only
DEBUG=false
MOCK_NASA_DATA=false
